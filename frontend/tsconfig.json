{
    "compilerOptions": {
        "strictNullChecks": true,
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/components/ParticlesBackground.jsx", "src/insurance_estimators/drought.js", "src/insurance_estimators/snow.js", "src/insurance_estimators/earthquake.js", "src/insurance_estimators/rain.js"],
    "exclude": ["node_modules"]
}
